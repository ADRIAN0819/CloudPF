{
  "name": "cloudpf-ingesta-tiempo-real",
  "version": "1.0.0",
  "description": "Sistema de ingesta en tiempo real con CDC, DynamoDB Streams, ElasticSearch y Athena",
  "main": "index.js",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:test": "serverless deploy --stage test",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "logs": "serverless logs -f",
    "invoke": "serverless invoke -f",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup:elasticsearch": "node scripts/setup-elasticsearch.js",
    "athena:create-tables": "node scripts/create-athena-tables.js"
  },
  "dependencies": {
    "aws-sdk": "^2.1490.0",
    "axios": "^1.6.0",
    "elasticsearch": "^16.7.3",
    "@elastic/elasticsearch": "^8.11.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "csv-parser": "^3.0.0",
    "json2csv": "^6.1.0"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.0",
    "serverless-webpack": "^5.13.0",
    "webpack": "^5.89.0",
    "webpack-node-externals": "^3.0.0",
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  },
  "keywords": [
    "aws",
    "lambda",
    "dynamodb",
    "elasticsearch",
    "athena",
    "cdc",
    "real-time",
    "ingestion"
  ],
  "author": "Adrian",
  "license": "MIT"
}
